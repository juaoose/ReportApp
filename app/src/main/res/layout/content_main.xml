<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_header_selector"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cejjr.reportapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.33"
            android:gravity="bottom">
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Nuevo\nReporte"
                android:id="@+id/button"
                android:onClick="crearReporte"
                android:background="@drawable/button_center"
                android:textColor="@color/WHITE"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="ver\nreporte"
                android:id="@+id/button2"
                android:onClick="verReportes"
                android:textColor="@color/WHITE"
                android:background="@drawable/button_center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.33"
            android:gravity="center">
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Asignar\nEventos"
                android:id="@+id/button3"
                android:onClick="addCalendarEvents"
                android:textColor="@color/WHITE"
                android:background="@drawable/button_center"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Agregar\nComentario"
                android:onClick="agregarComentario"
                android:textSize="12dp"
                android:textColor="@color/WHITE"
                android:id="@+id/button4"
                android:background="@drawable/button_center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="top">
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Registrar\nImplementos"
                android:textColor="@color/WHITE"
                android:id="@+id/button7"
                android:onClick="registrarImplementos"
                android:background="@drawable/button_center"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Terminar\nTurno"
                android:textColor="@color/WHITE"
                android:id="@+id/button6"
                android:background="@drawable/button_center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
